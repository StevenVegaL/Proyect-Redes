import React, { useState } from 'react';
import { getPedidoPorNumeroFactura } from '../api/pedidosApi';

const PedidoPorNumeroFactura = () => {
    const [numeroFactura, setNumeroFactura] = useState('');
    const [pedido, setPedido] = useState(null);
    const [mensaje, setMensaje] = useState('');

    const handleInputChange = (event) => {
        setNumeroFactura(event.target.value);
    };

    const handleBuscarPedido = async () => {
        try {
            const response = await getPedidoPorNumeroFactura(numeroFactura);
            setPedido(response.pedido);
            setMensaje('');
        } catch (error) {
            setMensaje('Pedido con el número de factura proporcionado no encontrado');
            console.error(error);
        }
    };

    return (
        <div>
            <h2>Buscar Pedido por Número de Factura</h2>
            <label htmlFor="numeroFactura">Número de Factura:</label>
            <input
                type="text"
                id="numeroFactura"
                name="numeroFactura"
                value={numeroFactura}
                onChange={handleInputChange}
                required
            />
            <button onClick={handleBuscarPedido}>Buscar Pedido</button>
            {mensaje && <p>{mensaje}</p>}
            {pedido && (
                <div>
                    <h3>Pedido Encontrado</h3>
                    <p>ID: {pedido._id}</p>
                    <p>Número de Factura: {pedido.numeroFactura}</p>
                    <p>Cliente ID: {pedido.cliente_id}</p>
                </div>
            )}
        </div>
    );
};

export { PedidoPorNumeroFactura };
